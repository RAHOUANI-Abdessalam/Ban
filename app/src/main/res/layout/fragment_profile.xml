<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    tools:context=".ProfileFragment">

    <include
        android:id="@+id/include"
        layout="@layout/tool_bar_profile"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="160dp"
            android:paddingBottom="20dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/shippingAdrsCardViewId"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:elevation="30dp"
                app:cardCornerRadius="6dp"
                tools:ignore="UnusedAttribute">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:drawablePadding="15dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/shipping_addresses"
                        android:textSize="17sp"
                        app:drawableStartCompat="@drawable/ic_baseline_gps_fixed_24" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/paymentMethodCardViewId"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="20dp"
                android:elevation="30dp"
                app:cardCornerRadius="6dp"
                tools:ignore="UnusedAttribute">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:drawablePadding="15dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/payment_methodes"
                        android:textSize="17sp"
                        app:drawableStartCompat="@drawable/ic_baseline_credit_card_24" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/ordersCardViewId"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="20dp"
                android:elevation="30dp"
                app:cardCornerRadius="6dp"
                tools:ignore="UnusedAttribute">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:drawablePadding="15dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/orders"
                        android:textSize="17sp"
                        app:drawableStartCompat="@drawable/ic_baseline_reorder_24" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/favoritesCardViewId"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="20dp"
                android:elevation="30dp"
                app:cardCornerRadius="6dp"
                tools:ignore="UnusedAttribute">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:drawablePadding="15dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/favorites"
                        android:textSize="17sp"
                        app:drawableStartCompat="@drawable/ic_baseline_favorite_border_24" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/prefernceDataCardViewId"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="20dp"
                android:elevation="30dp"
                app:cardCornerRadius="6dp"
                tools:ignore="UnusedAttribute">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:drawablePadding="15dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Your Preferences data"
                        android:textSize="17sp"
                        app:drawableStartCompat="@drawable/ic_baseline_data_usage_24" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/settingCardViewId"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="20dp"
                android:elevation="30dp"
                app:cardCornerRadius="6dp"
                tools:ignore="UnusedAttribute">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:drawablePadding="15dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/setting"
                        android:textSize="17sp"
                        app:drawableStartCompat="@drawable/ic_baseline_settings_24" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/exitCardViewId"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="20dp"
                android:elevation="30dp"
                app:cardCornerRadius="6dp"
                tools:ignore="UnusedAttribute">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:drawablePadding="15dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/exit"
                        android:textSize="17sp"
                        app:drawableStartCompat="@drawable/ic_baseline_exit_to_app_24" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:drawablePadding="15dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/privecy_policy"
                android:textColor="@color/gray3"
                android:textSize="12sp" />

        </LinearLayout>



</FrameLayout>